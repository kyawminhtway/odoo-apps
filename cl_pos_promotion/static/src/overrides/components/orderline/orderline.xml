<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="cl_pos_promotion.OrderlineInherit" t-inherit="point_of_sale.Orderline" t-inherit-mode="extension">
        <xpath expr="//t[@t-esc='line.customerNote']/.." position="after">
            <li t-if="line.promotion_ids and line.promotion_ids.length > 0" class="cl-promotion-info w-100 mt-2">
                <div t-foreach="line.promotion_ids" t-as="promotion" t-key="promotion.id" class="d-flex justify-content-between align-items-center">
                    <div>
                        <span t-esc="promotion.name" />
                        <span t-if="promotion.discount" t-esc="' ' + promotion.discount" class="cl-promotion-disc-amt" />
                    </div>
                    <img src="/cl_pos_promotion/static/images/gift.png" alt="Gift Icon" width="24px" height="24px"/>
                </div>
            </li>
        </xpath>
    </t>
</templates>
