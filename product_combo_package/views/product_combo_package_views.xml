<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_combo_package_form" model="ir.ui.view">
        <field name="name">product.combo.package.form</field>
        <field name="model">product.combo.package</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="btn_confirm" string="Mark as Todo" type="object" attrs="{'invisible': ['|', ('state', '!=', 'draft'), '|', ('product_id', '=', False), ('item_ids', '=', [])]}" class="oe_highlight" />
                    <button name="btn_validate" string="Mark as Done" type="object" attrs="{'invisible': [('state', '!=', 'confirm')]}" class="oe_highlight" />
                    <button name="btn_cancel" string="CANCEL" type="object" attrs="{'invisible': [('state', '!=', 'confirm')]}" class="btn-danger" />
                    <field name="state" widget="statusbar" statusbar_visible="draft,validate" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" attrs="{'invisible': [('name', '=', False)]}" />
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_id" required="1" />
                            <field name="quantity" required="1" />
                        </group>
                        <group>
                            <field name="date" required="1" />
                            <field name="company_id" required="1" />
                            <field name="user_id" readonly="1" force_save="1" />
                        </group>
                    </group>
                    <notebook>
                        <page name="items" string="Items">
                            <field name="item_ids" nolabel="1" context="{'location': parent.item_location_id}">
                                <tree editable="bottom">
                                    <field name="item_id" required="1" />
                                    <field name="quantity" required="1" />
                                    <field name="uom_id" required="1" />
                                    <field name="unit_cost" />
                                    <field name="total_cost" />
                                    <field name="package_id" invisible="1" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="item_id" />
                                                <field name="quantity" />
                                                <field name="uom_id" />
                                                <field name="unit_cost" />
                                                <field name="total_cost" />
                                                <field name="package_id" invisible="1" />
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name="extra_costs" string="Extra Cost">
                            <field name="extra_cost_ids" nolabel="1">
                                <tree editable="bottom">
                                    <field name="description" required="1" />
                                    <field name="cost" required="1" />
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group>
                                                <field name="description" required="1" />
                                                <field name="cost" required="1" />
                                            </group>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                        <page name="miscellaneous" string="Miscellaneous">
                            <group>
                                <group string="Locations">
                                    <field name="item_location_id" required="1" string="Items" />
                                    <field name="combo_product_loc_id" required="1" string="Combo Product" />
                                </group>
                            </group>
                            <field name="remarks" placeholder="Remarks..." nolabel="1" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user" />
                    <field name="activity_ids" />
                    <field name="message_ids" />
                </div>
            </form>
        </field>
    </record>
    <record id="view_product_combo_package_tree" model="ir.ui.view">
        <field name="name">product.combo.package.tree</field>
        <field name="model">product.combo.package</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="date" />
                <field name="product_id" />
                <field name="quantity" />
                <field name="company_id" />
                <field name="user_id" />
            </tree>
        </field>
    </record>
    <record id="action_product_combo_package" model="ir.actions.act_window">
        <field name="name">Combo Package</field>
        <field name="res_model">product.combo.package</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Click create button to create a new product combo package.
            </p>
            <p>
                Your combo package transactions will appear here.
            </p>
        </field>
    </record>
    <menuitem id="menu_product_combo_package" name="Combo Packaging" parent="stock.menu_stock_warehouse_mgmt" action="action_product_combo_package" groups="product_combo_package.group_combo_package_user" sequence="95" />
</odoo>